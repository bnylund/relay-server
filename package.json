    "prettier": "^2.4.1",
    "socket.io": "^4.3.1",
    "tmi.js": "^1.7.5",
    "ts-loader": "^8.1.0",
    "typescript": "^4.2.3",
    "underscore": "^1.13.1",
    "unzipper": "^0.10.11",
