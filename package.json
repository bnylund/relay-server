{
  "name": "relay-server",
  "version": "2.1.0",
  "description": "Relay server used for the Broadcasting System",
  "license": "MIT",
  "scripts": {
    "start": "cross-env NODE_ENV=local PORT=5555 nodemon -L --exec node -r ts-node/register src",
    "start:prod": "node dist/src/index.js 5000",
    "clean": "rimraf bin && rimraf dist",
    "deploy": "node --no-warnings --experimental-json-modules deploy.mjs",
    "build": "yarn clean && tsc",
    "build:bin": "cross-var \"yarn clean && tsc && pkg -t node16-win-x64,node16-linux-x64 -o bin/rocketcast-server-$npm_package_version dist/src/index.js\"",
    "build:docker": "docker build -t relay-server:latest -f ./Dockerfile .",
    "docker": "docker stop relay-server; docker rm --force relay-server; docker rmi relay-server:latest; yarn build:docker && docker run --name=relay-server -d -p 9000:5555 relay-server:latest",
    "docker:win": "docker stop relay-server & docker rm relay-server & docker rmi relay-server:latest & yarn build:docker && docker run --name=relay-server -d -p 9000:5555 relay-server:latest",
    "test": "mocha -r ts-node/register -r dotenv/config -r mocha-suppress-logs -r ./src/tests/setup.ts 'src/**/*.spec.*' --timeout 4000 --exit",
    "lint": "eslint . --ext .ts",
    "bump": "yarn version --patch",
    "bump:minor": "yarn version --minor",
    "bump:major": "yarn version --major"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mn-rocket-league/relay-server.git"
  },
  "author": "Ben Nylund <ben@nylund.us>",
  "bugs": {
    "url": "https://github.com/mn-rocket-league/relay-server/issues"
  },
  "homepage": "https://github.com/mn-rocket-league/relay-server#readme",
  "devDependencies": {
    "@types/chai": "^4.2.22",
    "@types/mocha": "^9.0.0",
    "@types/socket.io": "^3.0.2",
    "archiver": "^5.3.0",
    "aws-sdk": "^2.1063.0",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "chai-http": "^4.3.0",
    "cross-env": "^7.0.3",
    "cross-var": "^1.1.0",
    "mocha": "^9.1.3",
    "mocha-junit-reporter": "^2.0.2",
    "mocha-suppress-logs": "^0.3.1",
    "nodemon": "^2.0.7",
    "pkg": "^5.8.0",
    "rimraf": "^3.0.2",
    "ts-loader": "^9.3.1",
    "typescript": "4.2.3",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "webpack-node-externals": "^3.0.0"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.54.0",
    "@types/express": "^4.17.13",
    "@types/joi": "^17.2.3",
    "@types/node": "^16.10.3",
    "@types/pug": "^2.0.6",
    "@types/tmi.js": "^1.7.1",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "atob": "^2.1.2",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "express": "^4.17.1",
    "file-type": "^17.1.1",
    "joi": "^17.4.2",
    "js-logger": "^1.6.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.2.5",
    "prettier": "^2.4.1",
    "pug": "^3.0.2",
    "reconnecting-websocket": "^4.4.0",
    "socket.io": "^4.3.1",
    "socket.io-client": "^4.3.2",
    "terminal-kit": "^3.0.0",
    "tmi.js": "^1.7.5",
    "ts-node": "^10.4.0",
    "underscore": "^1.13.2",
    "uuid": "^8.3.2"
  }
}
