{
  "name": "relay-server",
  "version": "2.0.3",
  "description": "Relay server used for the Broadcasting System",
  "scripts": {
    "build": "webpack",
    "build:docker": "docker build -t umnrelay:latest -f ./Dockerfile .",
    "start": "nodemon -L --exec node -r ts-node/register src",
    "start:prod": "node ./build/bundle.js",
    "start:docker": "docker stop relay-server; docker rm --force relay-server; docker rmi umnrelay:latest; yarn build:docker && docker run --name=relay-server -d -p 9000:5555 umnrelay:latest",
    "start:docker:win": "docker stop relay-server & docker rm relay-server & docker rmi umnrelay:latest & yarn build:docker && docker run --name=relay-server -d -p 9000:5555 umnrelay:latest",
    "test": "mocha -r ts-node/register -r dotenv/config --require mocha-suppress-logs --file ./src/tests/setup.ts 'src/**/*.spec.*' --timeout 4000 --exit",
    "lint": "eslint . --ext .ts",
    "bump": "yarn version --patch",
    "bump:minor": "yarn version --minor",
    "bump:major": "yarn version --major"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mn-rocket-league/relay-server.git"
  },
  "author": "Ben Nylund <ben@nylund.us>",
  "bugs": {
    "url": "https://github.com/mn-rocket-league/relay-server/issues"
  },
  "homepage": "https://github.com/mn-rocket-league/relay-server#readme",
  "devDependencies": {
    "@babel/core": "^7.13.10",
    "@babel/preset-env": "^7.13.10",
    "@babel/preset-typescript": "^7.13.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/chai": "^4.2.22",
    "@types/crypto-js": "^4.0.2",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/mocha": "^9.0.0",
    "@types/mongodb": "^4.0.7",
    "@types/mongoose": "^5.11.97",
    "@types/multiparty": "^0.0.33",
    "@types/node": "^16.10.3",
    "@types/socket.io": "^3.0.2",
    "@types/underscore": "^1.11.3",
    "@types/unzipper": "^0.10.4",
    "@types/uuid": "^8.3.1",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "chai-http": "^4.3.0",
    "mocha": "^9.1.3",
    "mocha-junit-reporter": "^2.0.2",
    "mocha-suppress-logs": "^0.3.1",
    "nodemon": "^2.0.7",
    "socket.io-client": "^4.3.2",
    "ts-node": "^9.1.1"
  },
  "dependencies": {
    "@types/express": "^4.17.13",
    "@types/tmi.js": "^1.7.1",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "aws-sdk": "^2.1001.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "cli-msg": "^1.0.0",
    "crypto-js": "^4.1.1",
    "dotenv": "^8.2.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "express": "^4.17.1",
    "file-type": "^16.5.3",
    "joi": "^17.4.2",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.0.9",
